<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="610" Width="625" ResizeMode="CanMinimize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75*"/>
            <ColumnDefinition Width="665*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="PrevBtn" Content="&lt; |" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="45" Width="45" Margin="140,515,0,0"/>
        <Button x:Name="PlayBtn" Content="&gt;"   Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="45" Width="45" Margin="200,515,0,0"/>
        <Button x:Name="StopBtn" Content="[  ]"   Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="45" Width="45" Margin="260,515,0,0"/>
        <Button x:Name="NextBtn" Content="| &gt;" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="45" Width="45" Margin="345,515,0,0"/>

        <Button x:Name="ImportMusicBtn" Content="+" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="45" Width="45" Margin="450,515,0,0" Click="ImportMusicBtn_Click_1"/>
        
        <DataGrid Name="hammerPants" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="400" Margin="0,40,0,0" VerticalAlignment="Top" Width="500" Grid.Column="1"/>

        <Label x:Name="VolumeLbl" Content="Volume" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30" Width="60" Margin="20,510,0,0"/>
        
        <Slider x:Name="SongSlider"   HorizontalAlignment="Left" Height="30" Margin="0,475,0,0"   VerticalAlignment="Top" Width="500" Grid.Column="1"/>
        <Slider x:Name="VolumeSlider" HorizontalAlignment="Left" Height="30" Margin="0,530,455,0" VerticalAlignment="Top" Width="85"  Grid.Column="1"/>
        
    </Grid>
</Window>
