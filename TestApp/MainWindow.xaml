<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="611.074" Width="979.82" ResizeMode="CanMinimize">
    <Grid Margin="0,0,2,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300*"/>
            <ColumnDefinition Width="725*"/>
        </Grid.ColumnDefinitions>
        
        <Button x:Name="SelectDirectoryButton" Content="Select Folder" HorizontalAlignment="Left" Height="40" Margin="23,328,0,0" VerticalAlignment="Top" Width="100" Click="SelectDirectoryButton_Click"/>
        <Button x:Name="ImportButton" Content="Import" HorizontalAlignment="Left" Height="40" Margin="159,328,0,0" VerticalAlignment="Top" Width="100"/>
        
        <Button Content="&gt;" Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="212,516,0,0" VerticalAlignment="Top" Width="47" RenderTransformOrigin="-0.287,-0.045"/>
        <Button Content="[  ]" Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="287,516,0,0" VerticalAlignment="Top" Width="47" RenderTransformOrigin="-0.287,-0.045"/>
        <Button Content="| &gt;" Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="359,516,0,0" VerticalAlignment="Top" Width="46" RenderTransformOrigin="-0.287,-0.045"/>
        <Button Content="&lt; |" Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="137,516,0,0" VerticalAlignment="Top" Width="47" RenderTransformOrigin="-0.287,-0.045"/>
        
        
        <TreeView x:Name="FSTreeView" HorizontalAlignment="Left" Height="250" Margin="23,58,0,0" VerticalAlignment="Top" Width="236"/>
        <DataGrid Name="hammerPants" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="374" Margin="1,58,0,0" VerticalAlignment="Top" Width="494" Grid.Column="1"/>
        <ListBox Grid.Column="1" Height="374" Margin="527,58,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="135"/>
        
        <Label Content="Files" HorizontalAlignment="Left" Height="26" Margin="23,27,0,0" VerticalAlignment="Top" Width="136"/>
        <Label Content="Songs" HorizontalAlignment="Left" Height="26" Margin="1,27,0,0" VerticalAlignment="Top" Width="272" Grid.Column="1"/>
        <Label Content="Playlists" Grid.Column="1" HorizontalAlignment="Left" Height="26" Margin="527,27,0,0" VerticalAlignment="Top" Width="103"/>
        <Label Content="Volume" HorizontalAlignment="Left" Height="28" Margin="46,404,0,0" VerticalAlignment="Top" Width="86"/>
        
        <Slider HorizontalAlignment="Left" Height="30" Margin="28,432,0,0" VerticalAlignment="Top" Width="197"/>
        <Slider HorizontalAlignment="Left" Height="32" Margin="1,476,0,0" VerticalAlignment="Top" Width="661" Grid.Column="1"/>
        

    </Grid>
</Window>
