<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="611.074" Width="627.581" ResizeMode="CanMinimize">
    <Grid Margin="0,0,2,-1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="666*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="PlayBtn" Content="&gt;" Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="203,516,0,0" VerticalAlignment="Top" Width="47" RenderTransformOrigin="-0.287,-0.045"/>
        <Button x:Name="StopBtn" Content="[  ]" Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="268,516,0,0" VerticalAlignment="Top" Width="47" RenderTransformOrigin="-0.287,-0.045"/>
        <Button x:Name="NextBtn" Content="| &gt;" Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="335,516,0,0" VerticalAlignment="Top" Width="46" RenderTransformOrigin="-0.287,-0.045"/>
        <Button x:Name="PrevBtn" Content="&lt; |" Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="138,516,0,0" VerticalAlignment="Top" Width="47" RenderTransformOrigin="-0.287,-0.045"/>
        <Button x:Name="ImportMusicBtn" Content="+" Grid.Column="1" HorizontalAlignment="Left" Height="44" Margin="449,516,0,0" VerticalAlignment="Top" Width="46" RenderTransformOrigin="-0.287,-0.045"/>
        
        <DataGrid Name="hammerPants" ItemsSource="{Binding}" HorizontalAlignment="Left" Height="374" Margin="1,58,0,0" VerticalAlignment="Top" Width="494" Grid.Column="1"/>
        
        <Label Content="Songs" HorizontalAlignment="Left" Height="26" Margin="1,27,0,0" VerticalAlignment="Top" Width="272" Grid.Column="1"/>
        <Label x:Name="VolumeLbl" Content="Volume" HorizontalAlignment="Left" Height="28" Margin="10,508,0,0" VerticalAlignment="Top" Width="86" Grid.Column="1"/>
        
        <Slider x:Name="SongSlider" HorizontalAlignment="Left" Height="32" Margin="1,476,0,0" VerticalAlignment="Top" Width="494" Grid.Column="1"/>
        <Slider x:Name="VolumeSlider" HorizontalAlignment="Right" Height="30" Margin="0,530,454,0" VerticalAlignment="Top" Width="105" Grid.Column="1"/>
        
    </Grid>
</Window>
